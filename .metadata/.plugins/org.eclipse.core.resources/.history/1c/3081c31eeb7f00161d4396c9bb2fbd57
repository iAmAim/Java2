package com.basic;

public class Numbers implements Runnable {

	private int delay = 0;

	public Numbers(int delay) {
		this.delay = delay;
	}

	public int getDelay() {
		return delay;
	}

	public void setDelay(int delay) {
		this.delay = delay;
	}

	public  void printNumbers() throws InterruptedException {

		for (int i = 0; i < 100; i++) {
			System.out.println("number " + i);
			Thread.sleep(delay*1000);
			//wait(this.delay);
		}
	}

	@Override
	public void run() {
		
		try {
			printNumbers();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}

}
