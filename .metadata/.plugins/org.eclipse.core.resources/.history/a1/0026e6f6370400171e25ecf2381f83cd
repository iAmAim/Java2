	@Override
	public String getMessage() throws RemoteException {
		return this.message;
	}

	public void setMessage(String message) throws RemoteException {
		this.message = message;

	}
	
	public List<ChatClient> getClients(){
		
		
		
		return null;
	}

	// TODO: remove setName. you don't need this
